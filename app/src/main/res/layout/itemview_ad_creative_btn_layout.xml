<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/adCreativeBtnRelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:layout_below="@+id/adImageView"
    android:layout_marginBottom="2dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="#F4F5F7"
    >

    <TextView
        android:id="@+id/appVersionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        tools:text="版本 1.0.0"
        android:textSize="12dp"
        android:textColor="#B9BEC1"
        />

    <TextView
        android:id="@+id/developerNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/appVersionTextView"
        android:layout_toEndOf="@id/appVersionTextView"
        android:layout_toLeftOf="@id/privacyAndPermissionLinearLayout"
        android:layout_toStartOf="@id/privacyAndPermissionLinearLayout"
        android:layout_centerVertical="true"
        tools:text="公司名称ADSDFDSFSDFSDFSDFSDFDSFDSFSDFSFSDSFDSSFDFDS"
        android:textSize="12dp"
        android:textColor="#B9BEC1"
        android:layout_marginLeft="8dp"
        android:lines="1"
        android:ellipsize="end"
        />

    <LinearLayout
        android:id="@+id/privacyAndPermissionLinearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        >
        <TextView
            android:id="@+id/privacyTextView"
            android:text="隐私"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#868C92"
            android:textSize="12dp"
            android:lines="1"
            android:singleLine="true"
            />
        <TextView
            android:id="@+id/permissionTextView"
            android:text="权限"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#868C92"
            android:textSize="12dp"
            android:lines="1"
            android:singleLine="true"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            />

    </LinearLayout>
</RelativeLayout>